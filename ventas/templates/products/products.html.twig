{% block body %}
    <table class="table table-hover">
        <div>
            <h4 class="text-center">Lista de Productos</h4>
        </div>
        <thead>
            <tr>
                <th>#</th>
                <th>Nombre del producto</th>
                <th>Escala del producto</th>
                <th>Vendedor del producto</th>
